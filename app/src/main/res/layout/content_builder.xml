<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/alertTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/builder_alert_title"
            android:inputType="text"
            android:lines="1" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/builder_alert_dialog_content_label" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/builder_alert_content_view_label" />

        <RadioButton
            android:id="@+id/messageString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/builder_alert_string_message_label" />
    </RadioGroup>

    <Switch
        android:id="@+id/cancelable"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/builder_alert_can_be_dismissed" />

    <TextView
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/builder_alert_buttons_label" />

    <CheckBox
        android:id="@+id/positiveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/builder_alert_positive_button_label" />

    <CheckBox
        android:id="@+id/negativeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/builder_alert_negative_button_label" />

    <CheckBox
        android:id="@+id/neutralButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/builder_alert_neutral_button_label" />
</LinearLayout>

