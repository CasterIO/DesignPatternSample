<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.caster.designpatterns">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".observer.ObserverActivity"
            android:label="@string/observer_pattern"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".chain.ChainOfResponsibilityActivity"
            android:label="@string/chain_of_responsibility"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".builder.BuilderActivity"
            android:label="@string/builder"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.caster.designpatterns.MainActivity" />
        </activity>
        <activity
            android:name=".decorator.DecoratorActivity"
            android:label="@string/decorator"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.caster.designpatterns.MainActivity" />
        </activity>
    </application>

</manifest>
